{
  "name": "web-helper-mono",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web-app dev",
    "dev:electron": "pnpm --filter electron-app dev",
    "dev:extension": "pnpm --filter extension-app dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:electron\" \"pnpm dev:extension\"",
    "build:all": "pnpm run -r build",
    "typecheck": "pnpm run -r typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify": "node scripts/quick-verify.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.1"
  },
  "packageManager": "pnpm@8.12.1"
}