{
  "name": "web-helper-mono",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web-app dev",
    "dev:electron": "pnpm --filter electron-app dev",
    "dev:extension": "pnpm --filter extension-app dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:electron\" \"pnpm dev:extension\"",
    "build:all": "pnpm run -r build",
    "typecheck:all": "pnpm run -r typecheck",
    "typecheck:base": "tsc -b tsconfig.base.json || echo 'Warning: Some type errors found, but continuing anyway'",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "verify": "node scripts/quick-verify.js",
    "prepare": "husky install",
    "commit": "cz",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "setup": "pnpm install && pnpm prepare",
    "clean:all": "node scripts/clean-all.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@changesets/cli": "^2.27.1"
  },
  "packageManager": "pnpm@8.12.1",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
